<table >
  <thead>
    <tr>
      <th >昵称</th>
      <th >登录名</th>
      <th >状态</th>
      <th >CookieStore</th>
      <th colspan="2">操作</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.nickname %></td>
        <td><%= user.username %></td>
        <td>
          <%if user.sttype == 1%>
          启用
          <%else%>
          停用
          <%end%>
        </td>
        <td><%=user.session_id%></td>
        <td>
          <%= link_to '编辑',edit_user_path(user) %>
          <%= link_to '删除', user, method: :delete, data: { confirm: '确认删除?' } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "新增",new_user_path %>
<%=render 'toolbar' %>
