<%= notice %>
<%= form_for @user, url: {action: "create"}, html: {class: "m-t"} do |f| %>
    <div class="form-group">
      <%= f.text_field :nickname, autofocus: true, autocomplete: "username" ,placeholder:"昵称"%>
    </div>
    <div class="form-group">
      <%= f.text_field :username, autofocus: true, autocomplete: "username" ,placeholder:"用户名"%>
    </div>
    <div class="form-group">
      <%= f.password_field :pwd, autocomplete: "off" ,placeholder:"密码"%>
    </div>
    <div class="form-group">
        <%= f.password_field :pwd_confirmation, autocomplete: "off" ,class:"form-control",placeholder:"再输入一次密码"%>
    </div>
    <%= f.submit "注 册" ,id:"sub"%>
    <%=link_to "登录",logins_path%>
<% end %>